{
  "extends": [
    "@pob/root/tsconfigs/strict.json",
    "@pob/root/tsconfigs/targets/rollup-babel-with-dom.json"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/definitions",
    "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,

    "paths": {
      "use-react-intl-formatters": [
        "../../packages/use-react-intl-formatters/src"
      ],
      "use-react-intl-formatters/*": [
        "../../packages/use-react-intl-formatters/src/*"
      ]
    }
  },
  "references": [
    { "path": "../../packages/use-react-intl-formatters/tsconfig.json" }
  ]
}
