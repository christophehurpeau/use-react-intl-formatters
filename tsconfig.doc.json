{
  "include": ["packages/*/src/**/*.ts"],

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true
  },

  "references": [
    { "path": "packages/use-react-intl-formatters/tsconfig.json" },
    { "path": "packages/use-formatted-message/tsconfig.json" }
  ],

  "typedocOptions": {
    "entryPoints": [
      "packages/use-formatted-message/src/index.ts",
      "packages/use-react-intl-formatters/src/index.ts"
    ],
    "exclude": ["**/*.test.ts", "**/__tests__/**"],
    "readme": "README.md",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  }
}
